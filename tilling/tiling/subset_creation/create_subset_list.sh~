#!/bin/bash

#expected arguments:
# $1 : number of sets to create
# $2 : subset file handle

#------------------------------------

#number of relevant files
nf=$(ls -l *.LAZ | wc -l)

#create list of all files
echo 'getting file list'
ls *.LAZ>all_files_list.txt 


#create (equal size) subsets of files. initially create lists denoting each subset

#size of set
size_set=$((nf/$1))

#remainder setsize
remainder_set=$((nf%$1))

#define top set index
max_set=$(($1-1))
#if [max_set==0]
#   echo 'no creation of sets required. exiting'
#   exit
#fi

for i in $(seq 0 $max_set)
do
if [ $i==$max_set ]
then
    set_first_line=$((1+(i*size_set)))
    set_last_line=$((i*size_set + remainder_set))
    sed -n all_files_list.txt "$set_first_line/,$set_last_line/p" > tile_list_$i
else
    set_first_line=$((1+(i*size_set)))
    set_last_line=$((i*size_set))
    sed -n all_files_list.txt "$set_first_line/,$set_last_line/p" > $2_$i
fi
    
done






